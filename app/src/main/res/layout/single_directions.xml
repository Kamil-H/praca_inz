<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        app:cardCornerRadius="0dp"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="3 g 41 min "
                android:textColor="@color/colorAccent"
                android:id="@+id/timeTextView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="(362 km)"
                android:id="@+id/distanceTextView"
                android:gravity="left"
                android:layout_alignTop="@+id/timeTextView"
                android:layout_toRightOf="@+id/timeTextView"
                android:layout_toEndOf="@+id/timeTextView"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="przez: S8 i A2"
                android:id="@+id/summaryTextView"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/timeTextView"
                android:layout_alignStart="@+id/timeTextView"
                android:layout_marginBottom="0dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_maps_directions"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>