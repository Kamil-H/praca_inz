<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.praca_inz.Fragments.InfoFragment"
    android:padding="5dp"
    android:id="@+id/container">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="420dp"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="175dp"
                android:id="@+id/imageView"
                android:src="@drawable/car"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MARKA I MODEL"
                android:id="@+id/textView7"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/brandAndModelTextView"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:textSize="15dp"
                android:textColor="@color/navigationBarColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ROK PRODUKCJI"
                android:id="@+id/textView8"
                android:layout_below="@+id/brandAndModelTextView"
                android:layout_alignLeft="@+id/brandAndModelTextView"
                android:layout_alignStart="@+id/brandAndModelTextView"
                android:layout_marginTop="10dp"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/yearTextView"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:textSize="15dp"
                android:textColor="@color/navigationBarColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="RODZAJ PALIWA"
                android:id="@+id/textView10"
                android:layout_below="@+id/yearTextView"
                android:layout_alignLeft="@+id/yearTextView"
                android:layout_alignStart="@+id/yearTextView"
                android:layout_marginTop="10dp"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/consumptionTextView"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:textSize="15dp"
                android:textColor="@color/navigationBarColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="DATA KOŃCA WAŻNOŚCI UBEZPIECZENIA"
                android:id="@+id/textView9"
                android:layout_below="@+id/consumptionTextView"
                android:layout_alignLeft="@+id/consumptionTextView"
                android:layout_alignStart="@+id/consumptionTextView"
                android:layout_marginTop="10dp"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/insuranceTextView"
                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:textSize="15dp"
                android:textColor="@color/navigationBarColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="DATA KOŃCA WAŻNOŚCI PRZEGLĄDU"
                android:id="@+id/textView11"
                android:layout_below="@+id/insuranceTextView"
                android:layout_alignLeft="@+id/insuranceTextView"
                android:layout_alignStart="@+id/insuranceTextView"
                android:layout_marginTop="10dp"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/serviceTextView"
                android:layout_below="@+id/textView11"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:textSize="15dp"
                android:textColor="@color/navigationBarColor" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:scaleType="center"
                android:src="@drawable/ic_editor_mode_edit"
                android:layout_above="@+id/brandAndModelTextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ŚREDNIE SPALANIE"
                android:id="@+id/textView13"
                android:textSize="11dp"
                android:layout_alignTop="@+id/textView10"
                android:layout_toRightOf="@+id/textView9"
                android:layout_toEndOf="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/petrolTypeTextView"
                android:textSize="15dp"
                android:layout_below="@+id/textView13"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:textColor="@color/navigationBarColor" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>