<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.praca_inz.Fragments.InfoFragment"
    android:padding="5dp"
    android:id="@+id/container">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="450dp"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="168dp"
                android:id="@+id/imageView"
                android:src="@drawable/gas_station"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false" />

            <RadioGroup
                android:id="@+id/radioSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pb 98"
                    android:id="@+id/radioButton"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pb 95"
                    android:id="@+id/radioButton2"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ON"
                    android:id="@+id/radioButton3"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="35dp"
                    android:layout_marginEnd="35dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LPG"
                    android:id="@+id/radioButton4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_consumption"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/radioSex"
                android:layout_alignLeft="@+id/radioSex"
                android:layout_alignStart="@+id/radioSex">

                <EditText
                    android:id="@+id/consumptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Spalanie (l/100)"
                    android:inputType="numberDecimal" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_distance"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_consumption"
                android:layout_alignLeft="@+id/input_consumption"
                android:layout_alignStart="@+id/input_consumption"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/distanceEditText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Odległość (km)"
                    android:layout_below="@+id/input_consumption"
                    android:layout_alignLeft="@+id/input_consumption"
                    android:layout_alignStart="@+id/input_consumption"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:inputType="numberDecimal" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_price"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/input_consumption"
                android:layout_alignRight="@+id/radioSex"
                android:layout_alignEnd="@+id/radioSex">

                <EditText
                    android:id="@+id/priceEdtiText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Cena paliwa (zł)"
                    android:layout_below="@+id/input_distance"
                    android:layout_alignLeft="@+id/input_distance"
                    android:layout_alignStart="@+id/input_consumption"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:inputType="numberDecimal" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/resultTextView"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/input_distance"
                android:layout_alignLeft="@+id/input_distance"
                android:layout_alignStart="@+id/input_distance" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OBLICZ"
                android:id="@+id/button"
                android:layout_alignTop="@+id/resultTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>