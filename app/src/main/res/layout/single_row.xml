<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        app:cardCornerRadius="0dp"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="5dp"
            android:layout_marginTop="2dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="12677.67 km"
                android:id="@+id/timeTextView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:gravity="left"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00:00:00"
                android:id="@+id/distanceTextView"
                android:layout_below="@+id/timeTextView"
                android:layout_alignRight="@+id/timeTextView"
                android:layout_alignEnd="@+id/timeTextView"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/timeTextView"
                android:layout_alignStart="@+id/timeTextView"
                android:gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="24.10.2015 17:48"
                android:id="@+id/dateTextView"
                android:layout_alignTop="@+id/distanceTextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_maps_directions_car"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>