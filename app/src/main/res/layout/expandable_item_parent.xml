<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        app:cardCornerRadius="0dp"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/costTextView"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:clickable="true"
                android:layout_alignBottom="@+id/ivParentExpand"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginLeft="20dp"
                android:text="1000.00 zÅ‚"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ivParentExpand"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="center"
                android:src="@android:drawable/arrow_down_float"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1"
                android:id="@+id/monthTextView"
                android:textSize="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="2015"
                android:id="@+id/yearTextView"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/monthTextView"
                android:layout_alignEnd="@+id/monthTextView"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/monthly_fuel_cost"
                android:id="@+id/textView3"
                android:layout_alignTop="@+id/ivParentExpand"
                android:layout_toRightOf="@+id/monthTextView"
                android:layout_toEndOf="@+id/monthTextView"
                android:layout_marginLeft="30dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>